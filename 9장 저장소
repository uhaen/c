9-5(332페이지)
덧셈이 누적되는 프로그램


#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int sum; 
int index;
int arr[1024];


void add(int a)
{
	sum += a;
	arr[index] = a;
	index++;

	printf("%d", arr[0]);
	for (int i = 1; i <= index; i++)
	{
		if (arr[i] > 0)
		{
			printf("+ %d", arr[i]);
		}
		if (arr[i] < 0)
		{
			printf(" %d", arr[i]);
		}
	}

	printf("= %d\r\n", sum);

}
int main()
{
	int a;


	while (1)
	{
		printf("더할수를 입력하시오");
		scanf("%d", &a);

		if (a != 0)
		{
			add(a);
		}
	
		else
			break;
	
	}

}

