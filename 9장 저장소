실전예제(334페이지)
덧셈 과정을 보여주는 프로그램(양수따로, 음수따로)


#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int sum;
int plusIndex;
int plusArr[256];

int minusIndex;
int minusArr[256];

void add(int n)
{

    sum += n;

    if (n > 0)
    {
        plusArr[plusIndex] = n;
        plusIndex++;
    }
    else if (n < 0)
    {
        minusArr[minusIndex] = n;
        minusIndex++;
    }

    if (plusIndex > 0)
    {
        printf("( %d ", plusArr[0]);
        for (int i = 1; i < plusIndex; i++)
            printf("+ %d ", plusArr[i]);

        printf(")");
    }

    if (minusIndex > 0)
    {
        printf(" - ( %d ", -minusArr[0]);
        for (int i = 1; i < minusIndex; i++)
            printf("+ %d ", -minusArr[i]);

        printf(")");
    }

    printf(" = %d\r\n", sum);
}

int main()
{
    while (1)
    {
        int n;
        printf("더할 수를 입력하세요 > ");
        scanf("%d", &n);
        if (n)
            add(n);
        else
            break;
    }
}

