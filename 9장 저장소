9-4(327페이지) 
입출금 처리 프로그램(+총입출금액도 보여주기)


#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int amount = 0;  // 잔고를 저장하기 위한 변수
int totaldeposit = 0;
int totalwithdraw = 0;

void deposit(int a)
{
	totaldeposit += a;
	amount += a;
	printf("입금: %d, 총입금액:%d, 잔고:%d\r\n", a, totaldeposit, amount);
}
void withdraw(int a)
{
	totalwithdraw += a;
	amount -= a;

	printf("출금: %d, 총출금액:%d, 잔고:%d\r\n", a, totalwithdraw, amount);
}
int main()
{
	int a;

	printf("입출금액을 입력하시오");
	scanf("%d", &a);
	while (1)
	{
		if (a == 0)
		{
			break;
		}
		else if (a > 0)
		{
			deposit(a);

		}
		else if (a < 0)
		{
			withdraw(-a);
		}
		printf("입출금액을 입력하시오");
		scanf("%d", &a);
	}
	return 0;

}





#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int amount = 0;  // 잔고를 저장하기 위한 변수
int totaldeposit = 0;//전역변수로 선언해서 누적된 값을 보여줌
int totalwithdraw = 0;


void deposit(int a)
{

	totaldeposit += a;
	amount += a;
	printf("입금: %d, 총입금액:%d, 잔고:%d\r\n", a, totaldeposit, amount);
}
void withdraw(int a)
{

	totalwithdraw += a;
	amount -= a;

	printf("출금: %d, 총출금액:%d, 잔고:%d\r\n", a, totalwithdraw, amount);
}
int main()
{
	int a;


	while (1)
	{
		printf("입출금액을 입력하시오");
		scanf("%d", &a);

		if (a > 0)
		{
			deposit(a);
		}
		else if (a < 0)
		{
			withdraw(-a);
		}
		else
			break;
	
	}

}


